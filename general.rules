LD=/usr/local/bin/i386-elf-ld
CC=/usr/local/bin/i386-elf-gcc
NASM=`which nasm`

MKISOFS=`which mkisofs`

SH=`which sh`
RM=`which rm`
CP=`which cp`

CFLAGS=-nostdinc -nostdlib -O0 -I ../../include -I ../include -I ./include -c -fno-stack-protector -fno-builtin -fleading-underscore -masm=intel
LDFLAGS=-T kernel.ld -L/usr/local/lib
ASFLAGS=-f elf

BIN=bin

KRNL=mindfield
MAP=info

#ENV BASE RULES
ifeq ($(ARCH),x86)
	CFLAGS += -m32
endif
